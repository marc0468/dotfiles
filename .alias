alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias cp='cp -i'
alias mv='mv -i'
alias rm='rm -i'
alias cl='clear'

alias g='git'
alias ga='git add'
alias gc='git checkout'
alias gs='git status -sb'
alias gst='git status'
alias gl='git log --graph --all --decorate --pretty=format:"[%cn](%cd)%d %s" --date=short'

alias python="python3"
alias py="python3"
alias pip="pip3"

alias d='docker'
alias docker-compose='docker compose'
alias dc='docker compose'
alias k='kubectl'

alias ..='cd ..'

alias dot='cd ~/dotfiles'
alias home='cd ~/${home}'
alias c='code .'
alias cx='codex'
alias cxr='codex --resume'

# IP addresses
alias gip="dig +short myip.opendns.com @resolver1.opendns.com"
